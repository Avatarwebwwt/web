/* pages/center/center.wxss */
.center_header{
  width: 100%;
  position: relative;
}
.center_headerBg{
  width: 100%;
  height:100%;
  position: absolute;
  left:0;
  top:0;
  z-index: -1;
}
.header_RqBox{
  position: absolute;
  display: flex;
  right:60rpx;
  top:27rpx;
}
.header_Rq,
.header_sms{
  width:50rpx;
  height:50rpx;
  margin-left:5rpx;
}
.center_headerBox{
  display: flex;
  width:100%;
  padding: 0 60rpx;
  padding-top: 60rpx;
  padding-bottom: 33rpx;
  box-sizing: border-box;
}
.header_Img,
.header_Img .header_ImgFace{
  width:120rpx;
  height:120rpx;
}
.header_Img .header_ImgFace{
  border-radius: 50%;
  border:5rpx solid #fff;
  box-sizing: border-box;
}
.header_Img{
  position: relative;
}
.header_ImgVip{
  width:50rpx;
  height:50rpx;
  position: absolute;
  bottom: 0;
  right:0;
  /* margin-left: 5rpx;
  margin-top: -5rpx; */
}
.header_Text{
  padding-left: 25rpx;
}
.header_TextName{
  display: flex;
}
.header_TextName text{
  font-size: 30rpx;
  line-height: 40rpx;
  font-weight: bold;
}
/* .header_TextName image{
  width:50rpx;
  height:50rpx;
  margin-left: 5rpx;
  margin-top: -5rpx;
} */
.header_TextJob{
  color: #666666;
  font-size: 24rpx;
  line-height: 40rpx;
}
.header_TextCodeBox{
  display: flex;
  font-size: 24rpx;
  line-height: 86rpx;
  color: #666666;
}
.header_TextCodeCode{
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin: 0 10rpx;
}
.header_TextCodeCopy{
  width:100rpx;
  height:38rpx;
  background-color: #e79f6c;
  border-radius: 5rpx;
  color: #fff;
  line-height: 38rpx;
  text-align: center;
  font-size: 26rpx;
  margin-top: 25rpx;
}
.header_TextCodeCopyBtn{
  color: #e79f6c;
  background-color: #ac7650;
}

.header_List{
  display: flex;
  justify-content: space-around;
  width:100%;
  padding-top: 32rpx;
  padding-bottom: 7rpx;
  position: relative;
  height:140rpx;
  box-sizing: border-box;
}
.header_ListBar{
  text-align: center;
  color: #666;
}
.header_ListBarTitle{
  font-size: 32rpx;
  line-height: 34rpx;
}
.header_ListBarNun{
  font-size: 34rpx;
  font-weight: bold;
  line-height: 64rpx;
  color: #333;
}
.hr7,
.hr8{
  position: absolute;
  width:1px;
  height:60rpx;
  background-color: #e6e6e6;
  top:40rpx;
}
.hr7{
  left:33%;
}
.hr8{
  right:33%;
}

