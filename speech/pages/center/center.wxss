.main_listCourse{
  width:100%;
  padding-left: 60rpx;
  box-sizing: border-box;
  white-space: nowrap;
  display: flex;
  overflow: auto;
}
.main_CourseBar{
  width:230rpx;
  margin-right: 10rpx;
  display: inline-block;
}
.main_CourseBarImg{
  width:230rpx;
  height:140rpx;
 
  position: relative;
}
.main_CourseBarBox{
  position: absolute;
  width: 110rpx;
  height:40rpx;
  background:rgba(0, 0, 0, 0.7);
  border-radius: 10rpx;
  right:10rpx;
  bottom: 10rpx;
  font-size: 20rpx;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
}
.main_CourseBarImg image{
  width:100%;
  height:140rpx;
  border-radius: 5rpx;
  position: absolute;
  left:0;
  right:0;
}
.main_CourseBarText{
  color: #999999;
  line-height:  58rpx;
  text-align: center;
  font-size: 20rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.addIcon{
  width:50rpx;
  height:50rpx;
  margin-left: 15rpx;
  margin-top: -10rpx;
}
