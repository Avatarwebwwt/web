/* pages/RQ/RQ.wxss */
page{
  background-color: #f6f6f6;
  height:100%;
}
.wrap{
  padding-top: 20rpx;
}
.rq_title{
  width:100%;
  text-align: center;
  font-size: 30rpx;
  line-height: 112rpx;
  margin-bottom: 10rpx;
}
.rq_main{
  width:564rpx;
  height:1014rpx;
  margin: 0 auto;
  position: relative;
}
.rq_mainBg{
  position: absolute;
  left:0;
  top:0;
  width:564rpx;
  height:1014rpx;
  z-index: -1;
}
.rq_mainBgBox{
  width:200rpx;
  height:200rpx;
  border-radius: 10rpx;
  background-color: #fff;
  position: absolute;
  left:50%;
  top:50%;
  margin-left: -100rpx;
  margin-top: -100rpx;
  box-shadow:0 0 10rpx #999; 
  z-index: 2;
}
.rq_mainBgImg{
  width:160rpx;
  height:160rpx;
  margin: auto;
  margin-top: 20rpx;
}
.rq_mainName{
  width:100%;
  line-height: 46rpx;
  text-align: center;
  font-size: 26rpx;
  position: absolute;
  left:0;
  bottom:210rpx;
}
.rq_mainName text{
  color: #ef9603;
  margin-left:15rpx;
}
.rq_mainText{
  line-height: 50rpx;
  font-size: 30rpx;
  width:100%;
  text-align: center;
  color: #ef9603;
  position: absolute;
  bottom: 160rpx;
  left:0;
  font-weight: bold;
}