/* pages/center-member/center-member.wxss */
@import "../../utils/password.wxss";
page{
  height:100%;
  background-color: #f5f5f5;
}
.member_header{
  width:100%;
  text-align: center;
  color: #333;
  line-height: 50rpx;
  padding: 30rpx 0rpx;
}
.member_headerName{
font-size: 30rpx;
}
.member_headerKt{
  font-size: 28rpx;
}
.member_main{
  width:710rpx;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 0 40rpx;
  padding-top: 50rpx;
  padding-bottom: 25rpx;
  box-sizing: border-box;
}
.member_mainBar{
  width:100%;
  display: flex;
  color: #333333;
  justify-content: space-between;
}
.member_mainBarTitle{
  display: flex;
}
.member_mainBarTitle text{
  font-size: 28rpx;
  line-height: 68rpx;
}
.member_mainBarTitle image{
  width: 60rpx;
	height: 30rpx;
	border-radius: 10rpx;
  margin-top: 17rpx;
  margin-left: 17rpx;
 }

.member_mainBarNum image{
  width: 50rpx;
	height: 50rpx;
   margin-top:10rpx; 
   margin-left: 10rpx; 
}
.member_mainBarNum{
  font-size: 36rpx;
  line-height: 68rpx;
  display: flex;
}
.member_mainBarNum text{
  font-size: 24rpx;
  color: #999999;
}

.member_mainBox{
  color: #333;
  display: flex;
  justify-content: space-between;
  line-height: 60rpx;
  padding-top: 20rpx;
  padding-bottom: 40rpx;
}
.member_mainBtn{
  height: 88rpx;
	background-color: #ef9603;
	border-radius: 10rpx;
  font-size: 36rpx;
  color: #fff;
  width:100%;  
}
.member_mainTitle{
  font-size: 28rpx;
  color: #333333;
  line-height: 70rpx;
  width:100%;
}
.mainMemberList{
  width:100%;
  background-color: #f5f5f5;
	border-radius: 10rpx;
  padding: 32rpx 40rpx;
  box-sizing: border-box;
}
.mainMemberListBar{
  line-height: 46rpx;
  margin-bottom: 20rpx;
}
.mainMemberListBar_text{
  font-size: 28rpx;
  color: #333;
}
.mainMemberListBar text{
  font-size: 28rpx;
  color: #999999;
  display: block;
}

/*vip服务卡  */
.addService{
  font-size:28rpx;
  font-family:PingFang-SC-Medium;
  color:rgba(239,150,3,1);
  width:100%;
  text-align: right;
  line-height: 74rpx;
}

.mian_RQ,
.mian_RQ image{
  width:80rpx;
  height:80rpx; 
}
.mian_RQ image{
  margin-top: -10rpx;
  margin-left: 10px;
}