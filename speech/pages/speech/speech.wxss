/* pages/speech/speech.wxss */
.index_video,
.index_video video,
.cover{
  width:100%;
  height:400rpx;
}
.cover{
  position: relative;
}
.addActive{
  width:100%;
  height:10rpx;
  background-color:#f3f4f5;
  margin-bottom:20rpx;
}
.index_main .videoBox:last-child .addActive{
  height:0;
}

.index_Text{
  padding:40rpx;
  width:100%;
  box-sizing: border-box;
  padding-bottom: 20rpx; 
  color: #333;
}
.index_TextContent{
  line-height: 42rpx;
  font-size: 24rpx;
}
.index_TextTitle{
  line-height: 80rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.index_TextBox{
  width:100%;
  display: flex;
  justify-content: space-between;
}
.index_TextName{
  font-size: 28rpx;
  line-height: 28rpx;
}
.index_TextTime{
  font-size: 24rpx;
  color: #adadad;
}