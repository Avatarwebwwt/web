.videodate{
  position: absolute;
   bottom: -42rpx; 
  right:40rpx;
  color: #999999;
  font-size: 20rpx;
}

.deta_header{
  width: 100%;
  padding: 0 40rpx;
   /* padding-top: 400rpx;  */
  box-sizing: border-box;
}
.deta_headerTitle{
  padding-top: 10rpx;
  line-height: 92rpx;
  font-size: 30rpx;
}
.deta_headerText{
  line-height: 42rpx;
  font-size: 24rpx;
  color: #999;
}
.deta_headerHref{
  display: flex;
  margin-bottom: 92rpx;
}
.deta_headerTextRight{
  line-height: 48rpx;
  color: #ef9603;
  font-size: 28rpx;
}

.deta_headBox{
  width:100%;
  height: 200rpx;
  border:1rpx solid #e6e6e6;
  box-sizing: border-box;
   position: relative; 
   text-align: center;
   padding-top: 68rpx;
}
 .deta_headBoxImg{
  width:120rpx;
  height:120rpx;
  border-radius: 50%;
  position: absolute;
  left:50%;
  top:0;
  margin-top: -60rpx;
  margin-left: -60rpx;
  z-index: 2;
} 
.deta_headBoxName{
  font-size: 30rpx;
  line-height: 48rpx;
  font-weight: bold;
}
.deta_headBoxJob{
  width:100%;
  font-size: 30rpx;
  line-height: 48rpx;
}
.deta_headerHrefImg{
  width:44rpx;
  height:44rpx;
  margin-top: 2rpx;
}

