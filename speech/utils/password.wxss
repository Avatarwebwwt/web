page .input-content-wrap .top {
display: flex;
align-items: center;
height: 90rpx;
border-bottom: 2rpx solid #ddd;
/* justify-content: space-around; */
color: #666666;
}


page .input-content-wrap .top .close {
font-size: 44rpx;
color: #999;
font-weight: 100;
margin-right: 130rpx;
margin-left: 20rpx;
}

page .input-content-wrap .top .forget {
color: #00a2ff;
font-size: 22rpx;
}

page .input-content-wrap .actual_fee {
display: flex;
align-items: center;
justify-content: center;
color: #000;
height: 100rpx;
margin: 0 23rpx;
border-bottom: 2rpx solid #ddd;
}

page .input-content-wrap .actual_fee span {
font-size: 24rpx;
}

page .input-content-wrap .actual_fee text {
font-size: 36rpx;
}

page .input-content-wrap .input-password-wrap {
display: flex;
align-items: center;
justify-content: center;
height: 150rpx;
}

page .input-content-wrap .input-password-wrap .password_dot {
display: flex;
align-items: center;
justify-content: center;
text-align: center;
color: #000;
box-sizing: border-box;
width: 90rpx;
height: 90rpx;
border: 2rpx solid #ddd;
border-left: none 0;
}

page .input-content-wrap .input-password-wrap .password_dot:nth-child(1) {
border-left: 2rpx solid #ddd;
}

page .input-content-wrap .input-password-wrap .password_dot i {
background: #000;
border-radius: 50%;
width: 20rpx;
height: 20rpx;
}

page .input-content {
position: absolute;
opacity: 0;
left: -100%;
top: 600rpx;
background: #f56;
z-index:10;
}

page .input-content.active {
z-index: 11;
}